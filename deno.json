{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build --outDir dist",
    "preview": "deno run -A --node-modules-dir npm:vite preview --outDir dist",
    "serve": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/"
  },
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.0",
    "@types/react": "npm:@types/react@^18.3.1",
    "@types/react-dom": "npm:@types/react-dom@^18.3.1",
    "@vitejs/plugin-react-swc": "npm:@vitejs/plugin-react-swc@^3.7.1",
    "bootstrap": "npm:bootstrap@^5.3.3",
    "fuse.js": "npm:fuse.js@^7.0.0",
    "papaparse": "npm:papaparse@^5.4.1",
    "react": "npm:react@^18.3.1",
    "react-dom": "npm:react-dom@^18.3.1",
    "react-modal": "npm:react-modal@^3.16.1",
    "vite": "npm:vite@^5.4.8",
    "xlsx": "npm:xlsx@^0.18.5"
  },
  "nodeModulesDir": "auto"
}
